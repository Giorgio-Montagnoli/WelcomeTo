@model WelcomeTo.Models.ViewModels.GameVM

<div class="tab-content form-group">
    <div class="row">
        <div class="col-xs-8 col-md-8">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" href="#home">Game</a></li>
                <li><a data-toggle="pill" href="#menu1">Projects</a></li>
            </ul>
        </div>
        <div class="col-xs-4 col-md-4">
            <a href="#" id="numberPlaced" class="btn btn-info gameControls pull-right">Done</a>
        </div>
    </div>
    <br />
    <div class="tab-pane fade in active" id="home">
        <div class="panel panel-info">
            <div class="panel-heading">Game</div>
            <div class="panel-body">
                @Html.Partial("_gameCards", Model)
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="menu1">
        <div class="panel panel-info">
            <div class="panel-heading">Projects</div>
            <div class="panel-body">
                <div id="div_projects">
                    @Html.Partial("_popoverPojects", Model.SelectedProjects)
                </div>
            </div>
        </div>
    </div>
</div>
